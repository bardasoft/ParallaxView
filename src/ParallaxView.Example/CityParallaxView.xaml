<?xml version="1.0" encoding="utf-8" ?>

<parallaxView:ParallaxView x:Class="ParallaxView.Example.CityParallaxView"
                           xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                           xmlns:parallaxView="clr-namespace:ParallaxView;assembly=ParallaxView"
                           BackgroundColor="LightSkyBlue"
                           HeightRequest="250"
                           IsClippedToBounds="True">
    <Image Margin="10,10,0,0"
           parallaxView:ParallaxView.Speed="0.8"
           Aspect="AspectFit"
           HeightRequest="60"
           HorizontalOptions="Start"
           Source="sun.png"
           VerticalOptions="Start"
           WidthRequest="60" />

    <Image Margin="90,10,0,0"
           parallaxView:ParallaxView.Speed="0.6"
           Aspect="AspectFit"
           HeightRequest="60"
           HorizontalOptions="Start"
           Source="cloudbiggest.png"
           VerticalOptions="Start"
           WidthRequest="80" />

    <Image Margin="0,62,20,0"
           parallaxView:ParallaxView.Speed="0.6"
           Aspect="AspectFit"
           HeightRequest="40"
           HorizontalOptions="End"
           Source="cloudbiggest.png"
           VerticalOptions="Start"
           WidthRequest="60" />

    <Image Margin="30,70,0,0"
           parallaxView:ParallaxView.Speed="0.6"
           Aspect="AspectFit"
           HeightRequest="30"
           HorizontalOptions="Start"
           Source="cloudbiggest.png"
           VerticalOptions="Start"
           WidthRequest="40" />

    <Image parallaxView:ParallaxView.Speed="0.4"
           Aspect="AspectFit"
           HeightRequest="250"
           HorizontalOptions="Fill"
           Source="shadow_parallax_depth2.png"
           VerticalOptions="End" />

    <Image parallaxView:ParallaxView.Speed="0.2"
           Aspect="AspectFill"
           HeightRequest="250"
           HorizontalOptions="Fill"
           Source="shadow_parallax_depth1.png"
           VerticalOptions="End" />

    <Image parallaxView:ParallaxView.Speed="0"
           Aspect="AspectFill"
           HeightRequest="100"
           HorizontalOptions="Fill"
           Source="parallaxscroll.png"
           VerticalOptions="End" />

    <Label parallaxView:ParallaxView.Speed="0.5"
           FontAttributes="Bold"
           FontSize="40"
           HorizontalOptions="Center"
           Text="Parallax Scroll"
           TextColor="White"
           VerticalOptions="Center" />
</parallaxView:ParallaxView>
