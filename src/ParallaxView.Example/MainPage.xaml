<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ParallaxView.Example.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:example="clr-namespace:ParallaxView.Example">

    <ScrollView x:Name="ParentScrollView">
        <VerticalStackLayout>
            <example:CityParallaxView Source="{Binding Source={x:Reference ParentScrollView}}" />
            <Border HeightRequest="1024" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
